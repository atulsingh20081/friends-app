<div class="card">
  <div class="card-header">
    <h2><%= t 'global.menu.sign_in' %></h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-group">
        <%= f.email_field :email, class:"form-control",  placeholder:(t 'static_pages.registration.new.email') , autofocus: true, autocomplete: "email" %>
      </div>
      <br />
      <div class="field form-group">
        <%= f.password_field :password, class:"form-control",  placeholder:(t 'static_pages.registration.new.password') , autocomplete: "current-password" %>
      </div>
      <br />
      <% if devise_mapping.rememberable? %>
        <div class="field form-group">
          <%= f.check_box :remember_me, class:"form-check-input" %>
          <%= f.label :remember_me, (t 'global.menu.remember_me')%>
        </div>
      <% end %>

      <br />
      <div class="actions">
        <%= f.submit (t 'global.menu.log_in'), class:"btn btn-dark" %>
      </div>
    <% end %>

  </div>
</div>


<%= render "devise/shared/links" %>
