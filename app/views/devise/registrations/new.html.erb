<div class="card">
  <div class="card-header">
    <h2><%= t 'global.menu.sign_up' %></h2>
  </div>
  <div class="card-body">
    <br/>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control",  placeholder: (t 'static_pages.registration.new.email') %>
      </div>
      <br />
      <div class="field form-group">
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control",  placeholder: (t 'static_pages.registration.new.password')  %>
      </div>
      <br />
      <div class="field form-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control",  placeholder:(t 'static_pages.registration.new.re-enter_password')  %>
      </div>
      <br />
      <div class="actions">
        <%= f.submit (t 'global.menu.sign_up'), class:"btn btn-dark"%>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>



