<div class="card">
  <div class="card-header">
    <h2>Change your password</h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field form-group"">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control",  placeholder:"New Password(minimum 6 characters)"%>
      </div>
      <br />
      <div class="field form-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control",  placeholder:"Re-enter New Password(minimum 6 characters)" %>
      </div>
      <br />

      <div class="actions">
        <%= f.submit "Change my password" , class:"btn btn-dark" %>
      </div>
    <% end %>

  </div>
</div>
<%= render "devise/shared/links" %>
