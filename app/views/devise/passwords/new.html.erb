

<div class="card">
  <div class="card-header">
    <h2><%= t 'global.menu.forgot_password' %>></h2>
  </div>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control",  placeholder: (t 'static_pages.registration.new.email') %>
      </div>

      <br/>
      <div class="actions">
        <%= f.submit (t 'static_pages.registration.edit.password_instructions'), class:"btn btn-dark" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>

